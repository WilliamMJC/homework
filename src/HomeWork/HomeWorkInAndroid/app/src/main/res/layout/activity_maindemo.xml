<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hzu.feirty.HomeWork.activity.MainActivityDemo">
    <io.github.leibnik.gradualradiobar.GradualRadioGroup
        android:id="@+id/radiobar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <io.github.leibnik.gradualradiobar.GradualRadioButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/home"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="1dp"
            android:text="首页"
            android:textSize="10sp"
            android:textColor="#555"
            app:gradual_color="?attr/colorPrimary"/>

        <io.github.leibnik.gradualradiobar.GradualRadioButton
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            app:gradual_icon="@mipmap/t3"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="1dp"
            android:text="任务"
            android:textSize="10sp"
            android:textColor="#555"
            app:gradual_color="?attr/colorPrimary"/>

        <io.github.leibnik.gradualradiobar.GradualRadioButton
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:drawableTop="@mipmap/t2"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="1dp"
            android:text="功能"
            android:textSize="10sp"
            android:textColor="#555"
            app:gradual_color="?attr/colorPrimary"/>

        <io.github.leibnik.gradualradiobar.GradualRadioButton
            android:id="@+id/my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            app:gradual_icon="@mipmap/my"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="1dp"
            android:text="我的"
            android:textSize="10sp"
            android:textColor="#555"
            app:gradual_color="?attr/colorPrimary"/>
    </io.github.leibnik.gradualradiobar.GradualRadioGroup>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_above="@id/radiobar"
        android:background="#555"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
